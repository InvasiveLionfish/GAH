<!-- CARD ROW -->
<div class="row img-row">
  <div class="col-md-3 center-block gif-img">

  </div>

  <div class="col-md-4">
    <div class="col-md-12 prompt-box">
      <h3><%= @prompt.phrase %></h3>
    </div>
  </div>

  <div class="col-md-2">
    <div class="col-md-12 info-box">
     <p>Name: <%= @player.username %> </p>
      <p>Round : <%= @round.game_round %> </p>
      <p> Judge: <%= @judge.username %></p>
      <ol>
      <% @round.game.players.uniq.each do |player| %>
        <li><%= player.username %>: <%= player.score %> </li>
        <% end %>
      </ol>

      <ul>
      </ul>
    </div>
  </div>

  <div class="col-md-3 center-block gif-img">

 </div>
</div><!-- /middle row -->


<!-- BOTTOM ROW -->
<div class="row img-row">
  <% @selections.each do |selection| %>
  <div class="col-md-3 center-block gif-img">
  <div class="gif-button">
    <%= form_for @round do |f| %>
    <%= f.hidden_field :id, :value => @round.game_round %>
    <%= f.hidden_field :gif_id, :value => selection.gif.id %>
    <%= f.submit "I Choose You!", :type => :image, :src => selection.gif.url %>
    <% end %>
  </div>
  </div>
  <% end %>
</div><!-- /bottom row -->

<div class="waiting">
  <%= image_tag('https://media.giphy.com/media/2h0paFIFQHUsg/giphy.gif') %>
  <%= link_to "Check results", @game %>
</div>
