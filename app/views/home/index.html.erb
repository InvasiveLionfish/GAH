<!-- Facebook JS SDK (here for now) -->
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1048581988557244',
      xfbml      : true,
      version    : 'v2.6'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

<!-- Facebook Login Script -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6&appId=1048581988557244";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="row">
  <div class="col-md-6 center-block">
    <div class="welcome-card">
      <div class="site-title">
        <h1>Gifs
        </br>Against
      </br>Humanity</h1>
    </div><!-- /.site-title -->
  </div><!--/.welcome card-->
</div><!-- /.col-md-6 -->

<div class="col-md-6">
  <div class="info-card">
    <div class="info-gif">
      <%= image_tag(Gif.welcome) %>
    </div>

    <div class="user-info">
      
      <!-- FB Login Button -->
      <div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="true" data-auto-logout-link="true"></div>

      <div class="form-group">
        <%=label_tag :username, "Who the heck are you?" %>
        <div><input class="form-control" type="text" id="username" placeholder="enter a username here"></div>
      </div>

      <div class="form-group">
        <%=label_tag :existing_game_number, "Enter your game # to join an existing game:" %><br>
        <div><input class="form-control" type="text" id="existing_game_number" placeholder="enter the game # you were invited to"></div>
      </div>

      <div class="col-md-6">

        <div type="submit" class="btn btn-success btn-lg btn-block" id="join-game">Join </div>

      </div> 

      <div class="col-md-6">

       <div type="submit" class="btn btn-success btn-lg btn-block" id="start-game">Start </div>

     </div>

     
   </div><!-- .user-info -->
<!-- Facebook Like/Share Button -->
<div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
</div>

 </div><!-- /.info-card -->
</div><!-- /.col-md-6 -->
</div><!-- /.row -->
