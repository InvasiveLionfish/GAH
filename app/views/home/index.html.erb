<% if session[:member] %>
<%= render "member" %>
<% end %>

<div class="row">
  <div class="col-md-6 center-block">
    <div class="welcome-card">
      <div class="site-title">
        <h1>Gifs
        </br>Against
        </br>Humanity</h1>
      </div><!-- /.site-title -->
    </div><!--/.welcome card-->
  </div><!-- /.col-md-6 -->

  <div class="col-md-6">
    <div class="info-card">
      <div class="info-gif">
        <%= image_tag(Gif.welcome) %>
      </div>

      <div class="user-info">
      
          <% if !session[:member] %>
          <div class="form-group">
            <%=label_tag :username, "Who the heck are you?" %>
            <div><input class="form-control" type="text" id="username" placeholder="enter a username here"></div>
          </div>
          <% end %>
          <div class="form-group">
            <%=label_tag :existing_game_number, "Enter your game # to join an existing game:" %><br>
            <div><input class="form-control" type="text" id="existing_game_number" placeholder="enter the game # you were invited to"></div>
          </div>

          <div type="submit" class="btn btn-success btn-lg btn-block" id="join-game">Join Game</div>
           
          <h3 class="site-title"> OR </h3> 
          
           <div type="submit" class="btn btn-success btn-lg btn-block" id="start-game">Start a New Game</div>

          

          

       
      </div><!-- .user-info -->

    </div><!-- /.info-card -->
  </div><!-- /.col-md-6 -->
</div><!-- /.row -->


<div class="row">
<div class="member-registration">
<h2> Register as a Member:</h2>
<%= form_for :member, url: '/members' do |f| %>
      Username: <%= f.text_field :username %>
      Password: <%= f.password_field :password %>
      Password Confirmation: <%= f.password_field :password_confirmation %>
      <%= f.submit "Register" %>
    <% end %>

</div>
</div>


<div class="row">
<div class="member-login">
<h2> Login as a Member:</h2>
<%= form_for :member, url: '/sessions' do |f| %>
      Username: <%= f.text_field :username %>
      Password: <%= f.password_field :password %>
      <%= f.submit "Sign-In" %>
    <% end %>

</div>
</div>