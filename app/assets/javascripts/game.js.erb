      show_gifs()
    }

    else {
      show_winner_then_gifs()
      winner_already_viewed = true
      console.log("set winner already viewed to true!")
      console.log(winner_already_viewed)
    }

    function show_gifs() {
      $('.pow').hide()
    }


    function show_winner_then_gifs() {
      $('.pow').show().delay(2800).slideUp(200)
      $('.all-player-rows').hide().delay(2800).show(100)
    }


